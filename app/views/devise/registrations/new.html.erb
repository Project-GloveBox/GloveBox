
<ons-page>
  <ons-toolbar style=" background-color: #3A405A;">
    <div class="center" style="color:white;">GloveBox</div>
  </ons-toolbar>
  <h2 style="text-align: center; margin-top: 30px; font-family: 'Raleway', sans-serif;">Welcome to GloveBox</h2>
  <div style="text-align: center; margin-top: 80px;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        
        <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class: 'text-input text-input--underbar', placeholder: 'Name',style:"text-align: center; font-size: 1.5rem; margin-bottom: 15px;" %>
      </div>

      <div class="field">
        
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-input text-input--underbar', placeholder: 'Email',style:"text-align: center; font-size: 1.5rem; margin-bottom: 15px;" %>
      </div>

      <div class="field">
        
        <%= f.password_field :password, autocomplete: "new-password", class: 'text-input text-input--underbar', placeholder: 'Password',style:"text-align: center; margin-bottom: 10px;font-size: 1.5rem;" %>
      </div> 

      <div class="field">
        
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'text-input text-input--underbar' ,style:"text-align: center; margin-bottom: 10px;font-size: 1.5rem;" %>
      </div>

      <div class="actions" style="text-align: center; margin-top: 30px; margin-bottom: 30px;">
        <%= f.submit "Sign up", class: "button", style:"margin-top: 15px; background-color: white; color:#3A405A; font-weight: bold;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</ons-page>