<h2>Welcome to GloveBox</h2>


<ons-page>
  <ons-toolbar>
    <div class="center">GloveBox</div>
   
  </ons-toolbar>
    <h2 style="text-align: center; margin-top: 30px; font-family: 'Raleway', sans-serif;">Welcome to GloveBox</h2>
    <div style="text-align: center; margin-top: 80px;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
         
          <%=f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-input text-input--underbar', placeholder: 'Email',style:"text-align: center; font-size: 1.5rem; margin-bottom: 15px;" %>
        </div>

        <div class="field">
          
          <%= f.password_field :password, autocomplete: "current-password", class: 'text-input text-input--underbar', placeholder: 'Password',style:"text-align: center; margin-bottom: 10px;font-size: 1.5rem;" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      
        <div class="actions" style="text-align: center; margin-top: 30px; margin-bottom: 30px;">
          <%= f.submit "Log in", class: "button" %>
        </div>
        <div>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>

 
     
</ons-page>
