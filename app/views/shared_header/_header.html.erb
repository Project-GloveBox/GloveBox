<style>
.sidenav {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: #111;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
}

.sidenav a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: #818181;
    display: block;
    transition: 0.3s;
}

.sidenav a:hover {
    color: #f1f1f1;
}

.sidenav .closebtn {
    position: absolute;
    top: 30px;
    right: 5px;
    font-size: 36px;
    margin-left: 50px;a
    
}

@media screen and (max-height: 450px) {
  .sidenav {padding-top: 15px;}
  .sidenav a {font-size: 18px;}
}
</style>

<script>
function openNav() {
    document.getElementById("mySidenav").style.width = "250px";
}

function closeNav() {
    document.getElementById("mySidenav").style.width = "0";
}
</script>

<ons-page>
  <ons-toolbar style="width: 100%;">
    <div class="toolbar__left" style="width: 33%;">
      <ons-toolbar-button><%= link_to 'Home', vehicles_path, class:"button--quiet" %></ons-toolbar-button>
    </div>
    <div class="toolbar__center" style="width: 33%;">
        <%= "GloveBox" %>
    </div>
    <div class="toolbar__right" style="width: 33%;" >
      <p onclick="openNav()" class="button--quiet">Menu</p>
      
    </div>
  </ons-toolbar>
  <div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <%= link_to('Account', user_path(current_user.id)) %>
  <%= link_to 'Add a Vehicle', new_vehicle_path%>
  <%= link_to('Sign Out', destroy_user_session_path, method: :delete) %>
  
</div>