<style>
.sidenav {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: #111;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
}

.sidenav a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: #818181;
    display: block;
    transition: 0.3s;
}

.sidenav a:hover {
    color: #f1f1f1;
}

.sidenav .closebtn {
    position: absolute;
    top: 30px;
    right: 5px;
    font-size: 36px;
    margin-left: 50px;a
    
}

@media screen and (max-height: 450px) {
  .sidenav {padding-top: 15px;}
  .sidenav a {font-size: 18px;}
}
</style>

<script>
function openNav() {
    document.getElementById("mySidenav").style.width = "250px";
}

function closeNav() {
    document.getElementById("mySidenav").style.width = "0";
}
</script>

<ons-page>
  <ons-toolbar style="width: 100%;">
    <div class="toolbar__left" style="width: 33%;">
      <ons-toolbar-button><%= link_to 'Home', vehicles_path, class:"button--quiet" %></ons-toolbar-button>
    </div>
    <div class="toolbar__center" style="width: 33%;">
        <%= "GloveBox" %>
    </div>
    <div class="toolbar__right" style="width: 33%;" >
      <p onclick="openNav()" class="button--quiet">Menu</p>
      
    </div>
  </ons-toolbar>
  <div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <%= link_to('Account', user_path(current_user.id)) %>
  <%= link_to 'Add a Vehicle', new_vehicle_path%>
  <%= link_to('Sign Out', destroy_user_session_path, method: :delete) %>
  
</div>

<% if notice %>
<p class="alert alert-primary"><%= notice %></p>
<% end %>
 
<h2 style="text-align: center; margin-top: 10px; font-family: 'Raleway', sans-serif;"><%="#{current_user.first_name}'s GloveBox"%></h2>

<%@vehicles.each do |vehicle| %>
  
    <ons-card class=" card card--material" style="max-width: 100% ">
    <img src="https://monaca.io/img/logos/download_image_onsenui_01.png" alt="Onsen UI" style="width: 100%">
    <div class="title">
      <%= link_to vehicle.name.capitalize, vehicle_path(vehicle),  class:"button--quiet" %>
    </div>
    <div class="content">
      <ons-list>
        
        <ons-row>
          <ons-col width="25%"><%= vehicle.year %></ons-col>
          <ons-col width="25%"><%= vehicle.make %></ons-col>
          <ons-col width="25%"><%= vehicle.model %></ons-col>
          <ons-col width="25%"><%= vehicle.license_plate %></ons-col>
        </ons-row>
      </ons-list>
    </div>
  </ons-card>

<%end%>



<div id="form--new" style="margin-top: 50px;"></div>
<div class="actions" style="text-align: center; margin-top: 30px; margin-bottom: 30px;">
  <%= link_to 'Add a Vehicle', new_vehicle_path, class: "button" %>
</div>


</ons-page>
