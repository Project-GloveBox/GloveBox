<ons-page>

 <%= render "shared_header/header"%>


<% if notice %>
<p class="alert alert-primary"><%= notice %></p>
<% end %>

<h2 style="text-align: center; margin-top: 10px; font-family: 'Raleway', sans-serif; font-weight: bold;"><%="#{@vehicle.name.capitalize}"%></h2>


<ons-card style="max-width: 100%">
    <%= image_tag(asset_path("vehicle_default2.jpeg"),  width:"100%", id:"vehicle-img")%>
    <div class="title">

      <%= link_to @vehicle.name.capitalize, vehicle_path(@vehicle),  class:"button--quiet", style:"font-weight: bold; font-size: 1.5rem;" %>
    </div>
    <div class="content">
      <ons-list>
        <ons-row style=" margin-bottom: 20px;">
          <ons-col width="100%" style="font-size:1.2rem;">Year - <%= @vehicle.year %></ons-col>
        </ons-row>
      </ons-list>
      <ons-list>
        <ons-row style=" margin-bottom: 15px;">
          <ons-col width="100%" style="font-size:1.2rem;">Year - <%= @vehicle.make.capitalize %></ons-col>
        </ons-row>
      </ons-list>
      <ons-list>
        <ons-row style=" margin-bottom: 15px;">
          <ons-col width="100%" style="font-size:1.2rem;"> Model - <%= @vehicle.model.capitalize %></ons-col>
        </ons-row>
      </ons-list>
      <ons-list>
        <ons-row style=" margin-bottom: 15px;">
          <ons-col width="100%" style="font-size:1.2rem;"> Color - <%= @vehicle.color.capitalize %></ons-col>
        </ons-row>
      </ons-list>
      <ons-list>
        <ons-row style=" margin-bottom: 15px;">
          <ons-col width="100%" style="font-size:1.2rem;"> License Plate - <%= @vehicle.license_plate %></ons-col>
        </ons-row>
      </ons-list>
      <ons-list>
        <ons-row style=" margin-bottom: 15px;">
          <ons-col width="100%" style="font-size:1.2rem;"> VIN# <i class="far fa-question-circle" style= font-size:0.8rem;
            onclick="ons.notification.toast('The VIN (vehicle identification number) can often be found on the lower-left corner of the dashboard, in front of the steering wheel. You can read the number by looking through the windshield.', { timeout: 3000})"></i> - <%= @vehicle.vin %></ons-col>

        </ons-row>
      </ons-list>
      

    </div>
  </ons-card>

  <div class="actions" style="text-align: center; margin-top: 30px; margin-bottom: 30px;">
      <%= link_to 'Edit Vehicle', edit_vehicle_path, class: "button", style:"background-color: white; color:#3A405A; font-weight: bold;" %>
      <%= link_to 'Add Log', new_vehicle_maintenance_log_path(@vehicle.id), class: "button", style:"background-color: white; color:#3A405A; font-weight: bold;" %>
      <%= link_to 'View Log', vehicle_maintenance_logs_path(@vehicle.id), class: "button", style:"background-color: white; color:#3A405A; font-weight: bold;" %><br>
      <%= link_to "Delete Vehicle", @vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: "button", style:"margin-top: 15px; background-color: white; color:#3A405A; font-weight: bold;" %>
  </div>

  <div style="text-align: center;">
  
  </div>

</ons-page>





